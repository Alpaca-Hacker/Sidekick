<Window x:Class="Sidekick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sidekick"
        mc:Ignorable="d"
        Title="Sidekick Shell" Height="300" Width="1600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        ContentRendered="Window_ContentRendered"
        Name="ShellWindow"
        Opacity="0" IsHitTestVisible="False" >

    <Window.Resources>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="ShellWindow"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
            
            <!-- Translation animation targets the named TranslateTransform -->
            <DoubleAnimation Storyboard.TargetName="WindowTranslateTransform"
                             Storyboard.TargetProperty="Y"
                             From="-300" To="0" Duration="0:0:0.3">
                 <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetName="ShellWindow"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.3"/>
            <!-- Translation animation targets the named TranslateTransform -->
            <DoubleAnimation Storyboard.TargetName="WindowTranslateTransform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-300" Duration="0:0:0.3">
                 <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    
    <Border x:Name="ContentBorder"
            Background="Black" CornerRadius="0 0 8 8" BorderBrush="#FF444444" BorderThickness="1" Margin="5">
        
        <Border.RenderTransform>
            <TranslateTransform x:Name="WindowTranslateTransform" Y="-300" />
        </Border.RenderTransform>

        <!-- The content of the Border (Grid, TextBlock, etc.) goes here -->
        <Grid>
            <TextBlock Text="Sidekick App - Ready!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="GhostWhite"/>
        </Grid>
        <!-- End of Border content -->

    </Border>
</Window>